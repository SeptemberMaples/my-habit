/**index.wxss**/
.cells {
  margin: 10px;
  padding: 10px;
  border-radius: 4px;
  background-color: #fff;
  box-shadow: 0 2px 1px rgba(0, 0, 0, 0.1); }

.cells image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 15px; }

.cells icon {
  margin: 0 5px 0 0; }

.cells-title {
  display: block; }

.cells-desc {
  font-size: 12px;
  color: #666; }

.hover {
  margin: 10px 0;
  background-color: #eee; }
